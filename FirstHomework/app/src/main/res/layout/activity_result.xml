<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.itis.android.borland.firsthomework.activities.ResultActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_result"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tv_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_result"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/tv_test_ended"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/btn_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_result_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="@string/btn_again" />

    </RelativeLayout>

</RelativeLayout>
